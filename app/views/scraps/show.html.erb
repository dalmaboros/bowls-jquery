<% title @scrap.description %>


<div
  class="column"
  <% if @bowl %>
  data-id="<%= @bowl.id %>"
  <% end %>
  >
  <div class="scrap">
    <h2 class="scrap-h2" data-scrap-id="<%= @scrap.id %>">"<%= @scrap.description %>"</h2>
  </div>

  <% if @bowl %>
    <%= link_to "another", bowl_scrap_path(@bowl, @bowl.scraps.sample), class: "another" %>
    <p><%= link_to "edit", edit_bowl_scrap_path(@bowl, @scrap), class: "edit-scrap" %></p>
  <% else %>
    <p><%= link_to "edit", edit_scrap_path(@scrap), class: "edit-scrap" %></p>
  <% end %>
</div>

