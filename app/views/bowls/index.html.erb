<% title "bowls" %>

<% @bowls.each do |bowl| %>
  <div class="column">
    <div class="bowl-container">
      <%= link_to bowl_path(bowl), class: "random-bowl" do %>
        <div class="bowl-glyph"></div>
        <%= link_to bowl.name, bowl_path(bowl) %>
      <% end %>
    </div>
  </div>
<% end %> <!-- each do -->

<div class="column">
  <div class="bowl-container">
    <%= link_to new_bowl_path, class: "random-bowl" do %>
      <div class="add-glyph">
        <div class="horizontal-line"></div>
        <div class="vertical-line"></div>
      </div>
      <%= link_to "new_bowl", new_bowl_path %>
    <% end %>
  </div>
</div>
